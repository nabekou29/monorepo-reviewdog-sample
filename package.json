{
  "name": "monorepo-reviewdog-sample",
  "private": true,
  "scripts": {
    "lint": "pnpm -r lint",
    "lint:reviewdog": "reviewdog -conf=reviewdog.yml -reporter=github-pr-review",
    "lint:reviewdog:local": "reviewdog -conf=reviewdog.yml -reporter=local",
    "format": "prettier --write \"**/*.{js,ts,mjs,jsx,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,mjs,jsx,tsx,json,md}\""
  },
  "devDependencies": {
    "eslint": "^9.23.0",
    "prettier": "^3.5.3"
  }
}
